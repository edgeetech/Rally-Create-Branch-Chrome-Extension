{
    "manifest_version": 2,
    "name": "Rally Branch Creator",
    "description": "Create new Bitbucket branch from Rally user story [Beta]",
    "version": "1",
    "author": "Ahmet Selcuk Ozyurt",
    "icons": {
        "16": "logo.png",
        "48": "logo.png",
        "128":"logo.png"
    },
    "background": {
        "scripts": [
            "event.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}